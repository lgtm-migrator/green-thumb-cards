{
  "name": "green-thumb-cards",
  "version": "0.1.0",
  "description": "A JavaScript version of a 90s gardening card & Windows game by Playful Minds.",
  "repository": {
    "type": "git",
    "url": "https://github.com/msarakon/green-thumb-cards.git"
  },
  "author": "Minna Sarakontu <minna.sarakontu@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --mode=development --open",
    "build": "webpack --mode=production",
    "test": "jest",
    "lint": "eslint --ext .ts,.tsx src/"
  },
  "dependencies": {
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/plugin-transform-runtime": "^7.5.0",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@testing-library/react": "^8.0.4",
    "@types/jest": "^24.0.15",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.0.0",
    "eslint": "^6.0.1",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-react": "^7.14.2",
    "file-loader": "^4.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "redux-mock-store": "^1.5.3",
    "style-loader": "^0.23.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.7.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "corejs": "2",
          "useBuiltIns": "entry"
        }
      ],
      "@babel/preset-react",
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/src/test-utils/style-mock.ts",
      "\\.(jpg|jpeg|png|gif)$": "<rootDir>/src/test-utils/asset-transformer.ts"
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
